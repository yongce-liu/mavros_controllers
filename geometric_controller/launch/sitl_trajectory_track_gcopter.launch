<launch>
 <!-- Shared Parameters -->
  <arg name="mav_name" default="iris"/>
  <arg name="fcu_url" default="udp://:14540@127.0.0.1:14557"/>
  <arg name="gcs_url" default="" />
  <arg name="tgt_system" default="1" />
  <arg name="tgt_component" default="1" />
  <arg name="command_input" default="1" />
  <arg name="gazebo_simulation" default="false" />
  <arg name="visualization" default="true"/>
  <arg name="log_output" default="screen" />
  <arg name="fcu_protocol" default="v2.0" />
  <arg name="respawn_mavros" default="false" />
  
  <!-- FCU & Mavlink & rqt reconfigure -->
  <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure" />

  <include file="$(find mavros)/launch/node.launch">
      <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
      <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml" />

      <arg name="fcu_url" value="$(arg fcu_url)" />
      <arg name="gcs_url" value="$(arg gcs_url)" />
      <arg name="tgt_system" value="$(arg tgt_system)" />
      <arg name="tgt_component" value="$(arg tgt_component)" />
      <arg name="log_output" value="$(arg log_output)" />
      <arg name="fcu_protocol" value="$(arg fcu_protocol)" />
      <arg name="respawn_mavros" default="$(arg respawn_mavros)" />
  </include>
  

  <include file="$(find px4)/launch/posix_sitl.launch">
      <arg name="vehicle" value="$(arg mav_name)"/>
  </include>

  <!-- controller -->
  <!-- <node pkg="geometric_controller" type="geometric_controller_node" name="geometric_controller" ns="$(arg mav_name)" output="screen"> -->
  <node pkg="geometric_controller" type="geometric_controller_node" name="geometric_controller" ns="$(arg mav_name)">
          <remap from="command/bodyrate_command" to="/mavros/setpoint_raw/attitude"/>
          <param name="ctrl_mode" value="$(arg command_input)" />
          <!-- <param name="enable_sim" value="$(arg gazebo_simulation)" /> -->
          <param name="enable_sim" value="0" />
          <!-- <param name="enable_gazebo_state" value="$(arg gazebo_simulation)"/> -->
          <param name="enable_gazebo_state" value="0"/>
          <param name="max_acc" value="4.0" />
          <!--Params specific for Iris copter-->
          <param name="attctrl_constant" value="0.3"/>
          <param name="normalizedthrust_constant" value="0.06"/>
          <param name="normalizedthrust_offset" value="0.1"/>
          <param name="Kp_x" value="12.0" />
          <param name="Kp_y" value="12.0" />
          <param name="Kp_z" value="10.0" />
          <param name="Kv_x" value="3.0" />
          <param name="Kv_y" value="3.0" />
          <param name="Kv_z" value="3.3" />
  </node>

  <!-- Planner -->

  <!-- <node pkg="trajectory_publisher" type="trajectory_publisher" name="trajectory_publisher" ns="$(arg mav_name)" output="screen">
        <param name="trajectory_type" value="2" />
        <param name="height" value="1.0" />
        <param name="shape_omega" value="0.5" />
        <param name="reference_type" value="4" />
  </node> -->
  <!-- 3. 启动模拟地图生成和全局规划（添加到iris命名空间） -->

  <node pkg="mockamap" type="mockamap_node" name="mockamap_node" ns="$(arg mav_name)" output="screen">
      <param name="seed" type="int" value="1024"/>
      <param name="update_freq" type="double" value="1.0"/>
      <param name="resolution" type="double" value="0.25"/>
      <param name="x_length" type="int" value="50"/>
      <param name="y_length" type="int" value="50"/>
      <param name="z_length" type="int" value="5"/>
      <param name="type" type="int" value="1"/>
      <param name="complexity" type="double" value="0.025"/>
      <param name="fill" type="double" value="0.3"/>
      <param name="fractal" type="int" value="1"/>
      <param name="attenuation" type="double" value="0.1"/>
      <remap from="mock_map" to="/voxel_map"/>
  </node>
  
  <node pkg="gcopter" type="global_planning" name="global_planning_node" ns="$(arg mav_name)" output="screen">
      <rosparam file="$(find gcopter)/config/global_planning.yaml" command="load" />
      <param name="MapTopic" value="/voxel_map" />
  </node>

  <node name="pos_vel_plot" pkg="rqt_plot" type="rqt_plot" ns="$(arg mav_name)"
      args="/mavros/local_position/pose/pose/position reference/flatsetpoint/position geometric_controller/tracking_error" >
    <param name="start_time" value="0"/>
    <param name="end_time" value="30"/>
  </node>

  <group if="$(arg visualization)">
      <node type="rviz" name="rviz" pkg="rviz" args="-d $(find geometric_controller)/launch/integrated.rviz" />
  </group>

  <node pkg="tf" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 map odom 100" />


</launch>
